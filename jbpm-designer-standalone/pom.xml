      <resource>
        <directory>src/main/resources</directory>
        <filtering>false</filtering>
      </resource>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
        <includes>
          <include>org/jbpm/designer/jBPMDesigner.gwt.xml</include>
        </includes>
      </resource>
    </resources>

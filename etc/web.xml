	<servlet-mapping>
		<servlet-name>ExportServlet</servlet-name>
		<url-pattern>/pnml</url-pattern>
	</servlet-mapping>

	<servlet>
		<display-name>
			Oryx BPMN to PNML Export - unexecutable
		</display-name>
		<servlet-name>SimplePNMLExporter</servlet-name>
		<servlet-class>
			org.oryxeditor.server.SimplePNMLExporter

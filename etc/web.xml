-->
	<servlet>
		<display-name>Oryx EPC Upload Servlet</display-name>
		<servlet-name>EPCUpload</servlet-name>
		<servlet-class>org.oryxeditor.server.EPCUpload</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>EPCUpload</servlet-name>
		<url-pattern>/epc-upload</url-pattern>
	</servlet-mapping>

	<servlet>
		<display-name>Oryx AML Support Servlet</display-name>
		<servlet-name>AMLSupport</servlet-name>
		<servlet-class>org.oryxeditor.server.AMLSupport</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AMLSupport</servlet-name>
		<url-pattern>/amlsupport</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<display-name>Automatic Layouter Servlet</display-name>
		<servlet-name>AutoLayouter</servlet-name>
		<servlet-class>
			org.oryxeditor.server.AutoLayouterServlet
		</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AutoLayouter</servlet-name>
		<url-pattern>/layouter</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<display-name>Step Through</display-name>
		<servlet-name>StepThrough</servlet-name>
		<servlet-class>
			de.hpi.petrinet.stepthrough.StepThroughServlet
		</servlet-class>
	</servlet>
	<servlet-mapping>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-war-plugin</artifactId>
        <version>2.1.1</version>
        <configuration>
          <archive>
            <manifestEntries>
              <Bundle-Name>Process Designer</Bundle-Name>
              <Bundle-Version>${project.version}</Bundle-Version>
              <Bundle-SymbolicName>designer</Bundle-SymbolicName>
            </manifestEntries>
          </archive>
        </configuration>

        <executions>
          <execution>
            <id>jboss7</id>
            <goals>
              <goal>war</goal>
            </goals>
            <phase>package</phase>
            <configuration>
              <classifier>jboss7</classifier>
            </configuration>
          </execution>
          <execution>
            <id>jboss</id>
            <goals>
              <goal>war</goal>
            </goals>
            <phase>package</phase>
            <configuration>
              <classifier>jboss</classifier>
              <packagingExcludes>WEB-INF/lib/antlr-${antlr.version}.jar,WEB-INF/lib/log4j-over-slf4j-${log4j.version}.jar,WEB-INF/lib/xercesImpl-${xerces.version}.jar,WEB-INF/lib/xml-apis-1.3.04.jar,WEB-INF/lib/xmlParserAPIs-2.0.2.jar</packagingExcludes>
            </configuration>
          </execution>
          <execution>
            <id>tomcat</id>
            <goals>
              <goal>war</goal>
            </goals>
            <phase>package</phase>
            <configuration>
              <classifier>tomcat</classifier>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>


<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <parent>
        <groupId>org.jbpm</groupId>
        <artifactId>jbpm-designer</artifactId>
        <version>6.3.0-SNAPSHOT</version>
    </parent>
  <artifactId>jbpm-designer-distribution-wars</artifactId>
  <packaging>pom</packaging>

  <name>jBPM Designer Distribution Wars</name> 
  <description>
    This module builds the download wars for different application servers.
  </description>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <finalName>jbpm-designer-standalone</finalName>
          <descriptors>
            <!-- <descriptor>src/main/assembly/assembly-standalone-tomcat-7_0.xml</descriptor> -->
            <descriptor>src/main/assembly/assembly-standalone-jboss-eap-6_3.xml</descriptor>
            <!-- <descriptor>src/main/assembly/assembly-standalone-jboss-wildfly-8.xml</descriptor> -->
          </descriptors>
          <archive>
            <addMavenDescriptor>false</addMavenDescriptor>
          </archive>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>org.jbpm</groupId>
      <artifactId>jbpm-designer-standalone</artifactId>
      <type>war</type>
    </dependency>

    <dependency>
      <groupId>org.uberfire</groupId>
      <artifactId>uberfire-servlet-security</artifactId>
    </dependency>
    <!-- External dependencies -->
    <dependency>
        <groupId>org.apache.ant</groupId>
        <artifactId>ant</artifactId>
    </dependency>
  </dependencies>

</project>
